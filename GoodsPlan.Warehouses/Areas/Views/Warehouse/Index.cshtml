@model List<WarehouseViewModel>

<div>
    <div class="d-flex justify-content-between pb-2">
        <div>
            <a href="/user"><i class="arrow left"></i></a>
        </div>
        <div>
            <a class="button button-secondary" href="/warehouses/create">Добавить</a>
        </div>
    </div>

    <div>
        <div class="pb-2">
            Склады:
        </div>
        @foreach (var warehouse in Model)
        {

            <div class="d-flex p-2 justify-content-between section-list-item">
                <a href="/warehouses/@warehouse.Id">
                    @warehouse.Name
                </a>
                <div class="d-flex">
                    <a class="button py-1 d-flex justify-self-end mr-2" href="/warehouses/edit/@warehouse.Id">Редактировать</a>
                    <form method="post" asp-controller="Warehouse" asp-action="Delete" asp-route-id="@warehouse.Id"><button class="button button-warning py-1" type="submit">Удалить</button></form>
                </div>

            </div>
        }
    </div>
</div>