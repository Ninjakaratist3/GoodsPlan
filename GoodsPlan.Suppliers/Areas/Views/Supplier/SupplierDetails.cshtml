@model SupplierViewModel

<div>
    <div>
        <a href="/suppliers"><i class="arrow left"></i></a>
    </div>
    <div class="d-flex pt-3">
        <div class="row">
            <div class="col-12" style="font-size: 28px;">
                @Model.Name
            </div>
            <div class="col-12 pt-3">
                <div>
                    <b>Телефон: </b>@Model.Phone
                </div>
                <div>
                    <b>Товары</b>
                        @foreach (var product in Model.Products)
                        {
                            <p class="section-list-item">
                                <a href="/products/@product.Id">@product.Name</a>
                            </p>
                            
                        }
                </div>
            </div>
        </div>

    </div>
</div>