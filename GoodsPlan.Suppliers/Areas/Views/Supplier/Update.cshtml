@model SupplierForm

<div class="justify-content-center py-5">
    <div style="max-width: 800px;">
        <h3>Редактирование поставщика @Model.Name</h3>
        <form id="registration-form" asp-controller="Supplier" asp-action="Update">
            <div class="form-group">
                <label asp-for="Name" class="col-md-12 col-form-label px-0">Название</label>
                <div class="col-md-12 px-0">
                    <input asp-for="Name" required class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Phone" class="col-md-12 col-form-label px-0">Телефон</label>
                <div class="col-md-12 px-0">
                    <input asp-for="Phone" required class="form-control" />
                    <span asp-validation-for="Phone" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Email" class="col-md-12 col-form-label px-0">Почта</label>
                <div class="col-md-12 px-0">
                    <input asp-for="Email" required class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Address" class="col-md-12 col-form-label px-0">Адрес</label>
                <div class="col-md-12 px-0">
                    <input asp-for="Address" required class="form-control" />
                    <span asp-validation-for="Address" class="text-danger"></span>
                </div>
            </div>
            <div class="d-flex">
                <button class="button px-4 mr-3" type="submit">Сохранить</button>
                <a href="/suppliers" class="pt-2 d-inline-block">Отмена</a>
            </div>
        </form>
    </div>

</div>