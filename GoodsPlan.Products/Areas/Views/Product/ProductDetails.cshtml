@model ProductViewModel

<div>
    <div>
        <a href="/products"><i class="arrow left"></i></a>
    </div>
    <div class="d-flex pt-3 ">
        <div class="row">
            <div class="col-12 pb-3" style="font-size: 28px;">
                @Model.Name
            </div>
            <div class="col-6">
                <div>
                    <b>Код: </b>@Model.Code
                </div>
                <div>
                    <b>Описание: </b>@Model.Description
                </div>
                <div>
                    <b>Количество: </b>@Model.Quantity @Model.MeasureUnit
                </div>
            </div>
            <div class="col-6">
                <div>
                    <b>Вес: </b>@Model.Weight
                </div>
                <div>
                    <b>Объем: </b>@Model.Volume
                </div>
                <div>
                    <b>Цена: </b>@Model.Price
                </div>
                <div>
                    <b>Поставщик: </b>@Model.Supplier.Name
                </div>
                <div>
                    <b>Склад: </b>@Model.Warehouse.Name
                </div>
            </div>
        </div>
        
    </div>
</div>