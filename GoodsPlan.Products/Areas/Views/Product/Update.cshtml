@model ProductForm

<div class="d-flex">
    <div style="max-width: 700px;">
        <h3>Создание товара</h3>
        <form id="registration-form" asp-controller="Product" asp-action="Update">
            <div class="form-group">
                <label asp-for="Name" class="col-md-12 col-form-label px-0">Название</label>
                <div class="col-md-12 px-0">
                    <input asp-for="Name" required class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Code" class="col-md-12 col-form-label px-0">Код</label>
                <div class="col-md-12 px-0">
                    <input asp-for="Code" required class="form-control" />
                    <span asp-validation-for="Code" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="MeasureUnit" class="col-md-12 col-form-label px-0">Единица измерения</label>
                <div class="col-md-12 px-0">
                    <input asp-for="MeasureUnit" required class="form-control" />
                    <span asp-validation-for="MeasureUnit" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Weight" class="col-md-12 col-form-label px-0">Вес</label>
                <div class="col-md-12 px-0">
                    <input asp-for="Weight" required class="form-control" />
                    <span asp-validation-for="Weight" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Volume" class="col-md-12 col-form-label px-0">Объем</label>
                <div class="col-md-12 px-0">
                    <input asp-for="Volume" required class="form-control" />
                    <span asp-validation-for="Volume" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Quantity" class="col-md-12 col-form-label px-0">Количество</label>
                <div class="col-md-12 px-0">
                    <input asp-for="Quantity" required class="form-control" />
                    <span asp-validation-for="Quantity" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="SupplierId" class="col-md-12 col-form-label px-0">Поставщик</label>
                <div class="col-md-12 px-0">
                    <input asp-for="SupplierId" required class="form-control" />
                    <span asp-validation-for="SupplierId" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Price" class="col-md-12 col-form-label px-0">Цена</label>
                <div class="col-md-12 px-0">
                    <input asp-for="Price" required class="form-control" />
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="col-md-12 col-form-label px-0">Цена</label>
                <div class="col-md-12 px-0">
                    <textarea asp-for="Description" class="form-control"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="WarehouseId" class="col-md-12 col-form-label px-0">Склад</label>
                <div class="col-md-12 px-0">
                    <input asp-for="WarehouseId" required class="form-control" />
                    <span asp-validation-for="WarehouseId" class="text-danger"></span>
                </div>
            </div>
            <button class="col-md-12" type="submit">Сохранить</button>
            <a href="/products">Отмена</a>
        </form>
    </div>

</div>